%h1
  = t('.season', year: @season.year)

#countdown{:'data-start' => @season.starts_at}

%ul.legends
  %li= t '.days'
  %li= t '.hours'
  %li= t '.minutes'
  %li= t '.seconds'

= render 'game', game: @game


:coffeescript
  wrapper = $('#countdown')
  season_start = wrapper.data('start')

  wrapper.countdown
    timestamp: new Date(Date.parse(season_start))
